      "source": [
        "import numpy as np\n",
        "\n",
        "def Vander_mat(arr,N,increasing = True):  \n",
        "  if increasing == True:\n",
        "    list_of_arr = [arr**i for i in range(N)]\n",
        "  else:\n",
        "    list_of_arr = [arr**(N-i-1) for i in range(N)]\n",
        "\n",
        "  return np.stack(list_of_arr,1)\n",
        "\n",
        "\n",
        "x = np.array([1,2,3,4])\n",
        "print(Vander_mat(x,5))"
      ],
